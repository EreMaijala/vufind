[Piwik]
url = "https://url-to-running-piwik/"
site_id = 1

; Enables facets this way
custom_variables = true

; Enables tracking User's active Library Card & UserId
track_user = true

; Enables ClickHeat plugin
click_heat_plugin = false
click_heat_site_number = 1

[Perun]
; This config is about Perun from CESNET organization (https://github.com/CESNET/perun)
enabled 	= true

; Url of Perun
url		= https://perun-url/

; Virtual Organization name in Perun
vo		= MZK

; Params to send to Perun
eppn_param	= eppn
userId_param    = user
sigla_param     = lib
ignore_default_user_creation = true

[PiwikStatistics]
trust_ssl_host          = true
piwik_token_auth		= "token_goes_here"
default_statistics_url	= "http://cpk-front.mzk.cz/Statistics"
