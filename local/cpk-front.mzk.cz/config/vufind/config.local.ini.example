[Perun]
validateConfig          = 1

# URL of Perun's registrar to use
registrar               = "https://perun.cesnet.cz/fed/registrar/?vo=cpk"

# Perun's /Login SP endpoint
loginEndpoint           = "https://perun.cesnet.cz/Shibboleth.sso/Login"

# URL of Perun's Kerberos RPC to use
kerberosRpc             = https://perun.cesnet.cz/krb/rpc/

# JSON definition of attribute to save LibraryCards into
attrDefFilename         = userLibraryIdsDefinition.json

# Service user to use Perun's API (must have rights to read VO members & write to attributeId)
voManagerLogin          = USER_HERE
voManagerPassword       = PASS_HERE

[Piwik]
