<? $haveBlocks = is_array($blocks) && count($blocks) > 0;
if ($haveBlocks): ?>
  <? foreach($blocks as $key => $block): ?>
    <ul class="notification">
      <span class="label label-warning"><?=$block ?></span>
    </ul>
  <? endforeach; ?>
<? else: // No blocks were found ?>
  <ul class="notification">
    <span class="label label-success"><?=$this->transEsc('no_blocks_found')?></span>
  </ul>
<? endif; ?>