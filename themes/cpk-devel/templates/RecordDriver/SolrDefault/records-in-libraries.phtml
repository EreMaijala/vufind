	foreach ($records as $record => $value) {
		$source = $value['id'];
		$recordInLibraryOwnershipClass = in_array($record, $this->myLibs) ? 'my-library-record' : 'other-library-record';
		$recordUrl = $this->recordLink()->getUrl($source);
		$anchor = $this->transEsc('source_' . $record);
		
		$logoKey = $this->config->IdPLogosMappedToSolr->$record;
