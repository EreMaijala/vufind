		if ($logoUrl) {
			echo "<span class='$recordInLibraryOwnershipClass'><img height='16' src='$logoUrl'> <a href='$recordUrl'>$anchor</a></span><br>\n";
		} else {
			echo "<span class='$recordInLibraryOwnershipClass'><a href='$recordUrl'>$anchor</a></span><br>\n";
		}
	}
