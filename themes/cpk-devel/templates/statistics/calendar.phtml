			<option value='week' <?php if ($period === 'week') echo 'selected'; ?>><?= $this->transEsc('This week') ?></option>
			<option value='month' <?php if (($period === 'month') OR (! $period)) echo 'selected'; ?>><?= $this->transEsc('This month') ?></option>
